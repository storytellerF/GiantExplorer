<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="一般">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="notify_before_paste"
            app:title="@string/prompt_before_drag_drop" />

    </PreferenceCategory>
    <ListPreference
        android:defaultValue="@string/default_open_window_mode"
        android:dialogTitle="@string/open_window_mode_dialog_title"
        android:entries="@array/def_open_window_mode"
        android:entryValues="@array/def_open_window_mode"
        android:key="@string/setting_key_open_window_mode"
        android:title="@string/open_window_mode" />

</PreferenceScreen>