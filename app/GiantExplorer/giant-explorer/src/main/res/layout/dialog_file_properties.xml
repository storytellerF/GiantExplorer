<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_click"
                android:padding="10dp"
                tools:text="hello.txt" />

            <Button
                android:id="@+id/full_path"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                tools:text="/sdcard/" />

            <TextView
                android:id="@+id/accessedTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_click"
                android:padding="5dp"
                tools:text="2022" />

            <TextView
                android:id="@+id/modifiedTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_click"
                android:padding="5dp"
                tools:text="2022" />

            <TextView
                android:id="@+id/createdTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_click"
                android:padding="5dp"
                tools:text="2022" />

            <TextView
                android:id="@+id/video_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/greyAlpha"
                android:padding="10dp" />

            <TextView
                android:id="@+id/audio_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/greyAlpha"
                android:padding="10dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
